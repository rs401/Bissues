@model dynamic

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Project.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Project.Description
        </dd>
        <dt class = "col-sm-2">
            CreatedDate
        </dt>
        <dd class = "col-sm-10">
            @Model.Project.CreatedDate
        </dd>
        <dt class = "col-sm-2">
            ModifiedDate
        </dt>
        <dd class = "col-sm-10">
            @Model.Project.ModifiedDate
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Project.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
        <h2>
            Bissues
        </h2>
        @if(Model.Bissues != null)
        {
            @foreach (var bissue in Model.Bissues)
            {
                <p>
                    @bissue.Title
                </p>
            }
        }
        else{
            <p>
                No Bissues yet!
            </p>
        }
</div>

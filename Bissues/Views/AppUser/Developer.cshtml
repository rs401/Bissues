@model List<Bissues.Models.Bissue>
@{
    ViewData["Title"] = "User Content Page";
}

    <div class="col-md-10">
        <h1 class="display-4">User Content</h1>
        <p class="mt-3">
            Bissues that @User.Identity.Name has been assigned to.
        </p>
    </div>
    <hr/>

    <h4>Your Bissue Jobs</h4>
    <div class="container overflow-auto border mb-3 p-3" style="height: 200px;">
        @if(Model.Count < 1)
        {
            <h4 class="mt-3">You have not been assigned to any Bissues.</h4>
        }
        else 
        {
            <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li><a asp-controller="Bissues" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></li>
            }
            </ul>
        }
    </div>
